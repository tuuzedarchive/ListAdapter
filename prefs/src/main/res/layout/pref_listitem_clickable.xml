<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Prefs_ListItem_Root">

    <LinearLayout
        android:id="@+id/pref_item_layout"
        style="@style/Prefs_ListItem_ItemLayout"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pref_title"
            style="@style/Prefs_ListItem_Title"
            tools:text="Title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pref_summary"
            style="@style/Prefs_ListItem_Summary"
            tools:text="This Summary ." />

    </LinearLayout>
</FrameLayout>
